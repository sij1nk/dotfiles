" General Settings
set update.lastchecktime 1691049369504
set update.nag true
set update.nagwait 7
set update.lastnaggedversion 1.14.0
set update.checkintervalsecs 86400
set configversion 2.0
set newtab about:blank
set profiledir /home/rg/.mozilla/firefox/lysl9wik.default-release
set theme sijink
set hintchars tnsericagm
set editorcmd /usr/bin/alacritty -e /usr/bin/nvim '+normal!%lGzv%c|'

" Binds

""""""""""""""""""""""""""""""""""""""" General
bind <F1> help
set newtab about:blank
" disable tridactyl for current site
bind <S-Escape> mode ignore
bind . repeat
bind ge editor
" enter command mode
bind : fillcmdline_notrail
bind w reload
bind W reloadhard
" reopen most recently closed tab
bind u undo
" reopen most recently closed window
bind U undo window
" focus last focused input
bind gi focusinput -l
" Not sure which unbinds are needed and which aren't, but they don't hurt
unbind <C-l>
unbind <C-f>
unbind Escape
unbind <Escape>
unbind <C-n>
unbind <C-e>
unbind <C-a>
unbind --mode=normal a
bind --mode=ex N ex.next_completion
bind --mode=ex E ex.prev_completion

""""""""""""""""""""""""""""""""""""""" Scrolling
bind m scrollpx -50
bind n scrollline 10
bind e scrollline -10
bind i scrollpx 50
bind <C-u> scrollpage -0.5
bind <C-d> scrollpage 0.5
bind gg scrollto 0
bind G scrollto 100
bind ^ scrollto 0 x
bind $ scrollto 100 x

""""""""""""""""""""""""""""""""""""""" Finding
bind / fillcmdline find
bind ? fillcmdline find --reverse
bind j findnext --search-from-view
bind J findnext --search-from-view --reverse
bind gj findselect
 " same as findselect but backwards
bind gJ composite findnext --search-from-view --reverse; findselect
bind <Escape> nohlsearch

""""""""""""""""""""""""""""""""""""""" Tabs
bind N tabprev
bind E tabnext
bind <A-p> pin
bind <A-m> mute toggle
bind << tabmove -1
bind >> tabmove +1
bind g^ tabfirst
bind g0 tabfirst
bind g$ tablast
 " Jumps to the tab that plays audio
bind ga tabaudio
bind x tabclose
 " close tab and go to left
bind X composite tabprev; tabclose #
 " ~fzf for tabs
bind r fillcmdline tab
 " ~fzf for tabs of all windows
bind R fillcmdline taball
" ~fzf for bookmarks
bind b fillcmdline bmarks

""""""""""""""""""""""""""""""""""""""" Navigation
bind p clipboard open
bind P clipboard tabopen
bind <C-o> jumpprev
bind <C-i> jumpnext
" search
bind s fillcmdline open search
bind S fillcmdline tabopen search
bind <A-s> fillcmdline winopen search
" history and bookmarks
bind c fillcmdline open
bind C fillcmdline tabopen
bind <A-c> fillcmdline winopen
" current url
bind o current_url open
bind O current_url tabopen
bind <A-o> current_url winopen

bind gu urlparent
bind gU urlroot
bind [c urlincrement -1
bind ]c urlincrement 1

""""""""""""""""""""""""""""""""""""""" History
bind M back
bind I forward

""""""""""""""""""""""""""""""""""""""" Zoom
bind zi zoom 0.1 true
bind zo zoom -0.1 true
bind zM zoom 0.5 true
bind zR zoom -0.5 true
bind zz zoom 1
bind zI zoom 3
bind zO zoom 0.3

""""""""""""""""""""""""""""""""""""""" Clipboard
bind yy clipboard yank
bind ys clipboard yankshort
bind yc clipboard yankcanon
bind ym clipboard yankmd
bind yt clipboard yanktitle

""""""""""""""""""""""""""""""""""""""" Hint
" -q means stay in hint mode

bind t hint
" open in a new tab
bind T hint -b
bind agT hint -qb
" no javascript
bind aj hint -J
bind agj hint -qJ
" image
bind ai hint -i
bind agi hint -qi
" image in new tab
bind aI hint -I
bind agI hint -qI
" delete element
bind ak hint -k
bind agk hint -qk
" hide element
bind aK hint -K
bind agK hint -qK
" yank link to clipboard
bind ay hint -y
" yank text to clipboard
bind ap hint -p
" select an element's text?
bind ah hint -h
" yank element's title / alt text to clipboard
bind aP hint -P
" download linked resource
bind as hint -s
bind ags hint -qs
" download linked image
bind aS hint -S
bind agS hint -qS
" save-as the linked resource
bind av hint -a
" save-as the linked image
bind aV hint -A
" select element to scroll
bind aa hint -; *
" yank element's anchor to clipboard
bind a# hint -#
" scroll element to top of viewport
bind az hint -z

